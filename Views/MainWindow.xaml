<Window x:Class="MultiImageDownloader.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MultiImageDownloader.ViewModels"
        xmlns:converters="clr-namespace:MultiImageDownloader.Converters"
        Title="Image Downloader" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Конвертер для определения индекса кнопки -->
        <converters:IndexConverter x:Key="IndexConverter"/>

        <!-- Стиль для единообразия элементов -->
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка "Download All" -->
        <Button Grid.Row="0" 
                Content="Download All" 
                Command="{Binding DownloadAllCommand}"
                HorizontalAlignment="Center"
                Margin="0,0,0,10"
                Padding="15,5"/>

        <!-- Контейнеры для изображений -->
        <ItemsControl Grid.Row="1" 
                      ItemsSource="{Binding DownloadItems}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" Columns="3"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <StackPanel>
                            <!-- Изображение -->
                            <Image Source="{Binding Image}" 
                                   MaxHeight="300"
                                   Stretch="Uniform"/>

                            <!-- Поле для URL -->
                            <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,5,0,0"
                                     Padding="5"/>

                            <!-- Кнопки Start/Stop -->
                            <StackPanel Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,5,0,0">
                                <Button Content="Start" 
                                        Command="{Binding DataContext.StartDownloadCommand, 
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, 
                                                           Converter={StaticResource IndexConverter}}"
                                        Margin="0,0,5,0"/>

                                <Button Content="Stop" 
                                        Command="{Binding DataContext.StopDownloadCommand, 
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Self}, 
                                                           Converter={StaticResource IndexConverter}}"/>
                            </StackPanel>

                            <!-- Прогресс-бар для отдельного изображения -->
                            <ProgressBar Value="{Binding Progress}" 
                                         Height="10"
                                         Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Общий прогресс-бар -->
        <ProgressBar Grid.Row="2" 
                     Minimum="0" 
                     Maximum="100" 
                     Value="{Binding TotalProgress}" 
                     Height="20"
                     Margin="0,5,0,0"/>

        <!-- Статус (опционально) -->
        <TextBlock Grid.Row="3" 
                   Text="{Binding StatusText}"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,0"/>
    </Grid>
</Window>